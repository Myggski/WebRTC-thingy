{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
  }
}